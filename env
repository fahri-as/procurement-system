# Konfigurasi lingkungan untuk aplikasi procurement-system.
# Salin atau sesuaikan sesuai kebutuhan lokal/deployment.
# Database MySQL

# DB_CONNECTION=mysql
# # DB_HOST=127.0.0.1
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=procurement_system

# DSN siap pakai (contoh): user:pass@tcp(host:port)/dbname?parseTime=true
DB_DSN=root:@tcp(localhost:3306)/procurement_system?parseTime=true

# JWT
JWT_SECRET=changeme

# HTTP server
PORT=8080

